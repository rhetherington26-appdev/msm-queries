<h1>Director <%= @director_id%> details</h1>

<a href="/directors">Go back</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @director.name%>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%= @director.dob%>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @director.bio%>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="http://robohash.org/<%= @director_id%>">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= time_ago_in_words(@director.created_at)%>
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= time_ago_in_words(@director.updated_at)%>
  </dd>
</dl>

<hr>

<h1>Filmography</h1>

<table border="1">
 <% @movies.each do |instance|%>
 <tr>
  <td>ID</td>
  <td>Image</td>
  <td>Title</td>
  <td>Year</td>
  <td>Director</td>
  <td></td>
 </tr>
 <tr>
  <td>
   <%= instance.id%>
  </td>
  <td>
   <img src="http://robohash.org/<%= @director_id%>">
  </td>
  <td>
   <%= instance.title%>
  </td>
  <td>
   <%= instance.year%>
  </td>
  <td>
   <%= @director.name%>
  </td>
  <td>
    <a href="/movies/<%= instance.id%>">Show Details</a>
  </td>
 </tr>
 <% end%>
</table>